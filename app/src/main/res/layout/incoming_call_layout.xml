<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ProgressBar
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/mainIconHeightCallProgress"
        android:layout_height="@dimen/mainIconWidthCallProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginTopProgress"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/custom_progress_background"
        android:indeterminateDuration="1200"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/incomingProfileIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_width="@dimen/mainIconWidthProfile"
        android:layout_height="@dimen/mainIconHeightProfile"
        android:clickable="true"
        app:riv_oval="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startCallTitle"
        android:layout_below="@+id/progress_wheel"
        android:maxLines = "1"
        android:minLines="1"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/textSizeLarge"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startCallTitle">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mainButtonHeight"
            android:id="@+id/startAnswer"
            android:layout_marginTop="@dimen/marginTopSmall"
            android:textColor="@color/white"
            android:text="@string/answer"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeLarge"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginEnd="@dimen/marginEndSmall"
            android:paddingStart="@dimen/marginStartDescPhoto"
            android:paddingEnd="@dimen/marginEndDescPhoto"
            android:background="@drawable/button_incoming_call" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mainButtonHeight"
            android:id="@+id/declineCall"
            android:layout_marginTop="@dimen/marginTopSmall"
            android:layout_marginStart="@dimen/marginStartSmall"
            android:textColor="@color/white"
            android:text="@string/decline"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeLarge"
            android:gravity="center"
            android:textAllCaps="false"
            android:paddingStart="@dimen/marginStartDescPhoto"
            android:paddingEnd="@dimen/marginEndDescPhoto"
            android:background="@drawable/custom_end_call_button" />
    </LinearLayout>
</RelativeLayout>