<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="800dp"/>
            <stroke android:width="10dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/blue" android:endColor="@color/blue"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="800dp"/>
            <stroke android:width="10dip" android:color="@color/blue" />
            <solid android:color="@color/blue"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="80dp"/>
            <stroke android:width="10dip" android:color="@color/blue" />
            <gradient android:angle="-90" android:startColor="@color/blue" android:endColor="@color/blue" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="80dp"/>
            <stroke android:width="10dip" android:color="@color/blue" />
            <solid android:color="@color/blue"/>
        </shape>
    </item>
</selector>